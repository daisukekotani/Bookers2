<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice]%>
    </div>
    <% end %>
  

<header>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand">Bookers </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
            <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-user user" %></li>
            <li><%= link_to "Books", books_path , class: "glyphicon glyphicon-book book" %></li>
            <li><%= link_to "logout",destroy_user_session_path, method: :get, "data-confirm" => "Are you sure?", class: "glyphicon glyphicon-log-out" %></li>
          <% else %>
            <li><%= link_to "Home", root_path, class: "glyphicon glyphicon-home home" %></li>
            <li><%= link_to "About", home_about_path, class: "glyphicon glyphicon-link link" %></li>
            <li><%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit edit" %></li>
            <li><%= link_to "login", user_session_path, class: "glyphicon glyphicon-log-in log-in" %></li>
          <% end %>
        </ul>
    </div>
  </div>
</nav>
</header>

  <body>
    <%= yield %>
  </body>
</html>