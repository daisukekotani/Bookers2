<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, class: "img-circle" ,  size: "40x40", fallback: "no_image.jpg" %>
<table class='table'>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th><%  if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div><!--col-xs-3 -->

<div class="col-xs-9">
  <h1>Books</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @user.books.each do |book| %>

  <tbody>
      <tr>
        <td><span><%= link_to attachment_image_tag @user, :profile_image, class: "img-circle" ,  size: "40x40", fallback: "no_image.jpg" %>
        <td><span><%= link_to book.title, book_path(book.id) %></span></td>
        <td><span><%= book.body %></span></td>
        <% end %>
      </tr>
  </tbody>
</table>
</div><!--col-xs-9 -->
</div><!--row -->
</div><!--container -->
</body>
<footer>
  <p>CopyRight Infratop.inc</p>

</footer>

</html>

