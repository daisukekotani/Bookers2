<html>
  <head>
    <title>Bookers</title>

<span>Bookers</span>
<header>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Home', user_path(current_user.id) %></li>
      <li> <%= link_to 'Users', users_path %> </li>
      <li> <%= link_to 'Books', books_path %></li>
      <li> <%= link_to "logout",destroy_user_session_path, method: :delete, "data-confirm" => "Are you sure?"%></li>
    </ul>
  </nav>
</header>

<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>option</h4>
<%= f.text_area :option %>
<%= f.submit 'CreateBook' %>
<% end %>

  <h1>Books</h1>
<% @user.books.each do |book| %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><span><%= link_to attachment_image_tag @user, :profile_image, :fill, 100, 100 %></span></td>
        <td><span><%= link_to book.title, book_path(book.id) %></span></td>
        <td><span><%= book.opinion %></span></td>
      </tr>
  </tbody>
</table>
<% end %>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>

</body>
</html>
