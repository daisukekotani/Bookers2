<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, class: "img-block" ,  size: "100x100", fallback: "no_image.jpg" %>

<table class='table'>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<% if user_signed_in? %>
<%= link_to edit_user_path(current_user) do %>
  <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
<% end %>
<% end %>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div><!--col-xs-3 -->


<div class="col-xs-9">
<h1>Users</h1>


<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, class: "img-block" ,  size: "40x40", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user.id)%></td>
      </tr>
     <% end %>
  </tbody>
</table>
</div><!--col-xs-9 -->
</div><!--row -->
</div><!--container -->
