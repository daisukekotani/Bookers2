<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100 %>
<% if user_signed_in? %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
  <% end %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <th></p></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div><!--col-xs-3 -->


<div class="col-xs-9">
<h1>Users</h1>


<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   <% @users.each do |user| %>
  <tbody>
   
      <tr>
        <td><span><%= attachment_image_tag user, :profile_image, :fill, 60, 60 %></span></td>
        <td><span><%= user.name %></span></td>
        <td><span><%= link_to "Show",user_path(user.id)%></span></td>
        
      </tr>
     
  </tbody>
  <% end %>
</table>
</div><!--col-xs-9 -->
</div><!--row -->
</div><!--container -->
