<html>
<head>

<title>Bookers</title>

<header>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Home', user_path(current_user.id) %></li>
      <li> <%= link_to 'Users', users_path %> </li>
      <li> <%= link_to 'Books', books_path %></li>
      <li> <%= link_to "logout",destroy_user_session_path, method: :delete, "data-confirm" => "Are you sure?"%></li>
    </ul>
  </nav>
</header>


<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
<h4>Name</h4>
<%= f.text_field :name %>
<h4>Image</h4>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
<h4>ProfileImage</h4>
<%= f.attachment_field :profile_image %>
<h4>Introduction</h4>
<%= f.text_field :introduction %>
<%= f.submit "Update User" %>
<% end %>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>

</body>
</html>