<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @book.user, :profile_image, class: "img-circle" ,  size: "40x40", fallback: "no_image.jpg" %>

<table class='table'>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
    <tr>
      <th><% if user_signed_in? %>
      <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p><% end %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@booknew, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div><!--col-xs-3 -->


<div class="col-xs-9">
<h1>Book detail</h1>
<table class='table'>
  <tbody>
    <tr>
      <td><%= link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, class: "img-circle" ,  size: "40x40", fallback: "no_image.jpg" %><% end %></td>
      <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit",edit_book_path(@book)%></td>
      <td><%= link_to "Destroy",book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div><!--col-xs-9 -->
</div><!--row -->
</div><!--container -->
<footer>
<p>CopyRight Infratop.inc</p>
</footer>


</body>
</html>
