<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100 %>
<% if user_signed_in? %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
  <% end %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
    <tr>
      <th></p></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</div><!--col-xs-3 -->


<div class="col-xs-9">
<h1>Book detail</h1>
<%= link_to user_path(@book.user.id) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60%><% end %>
<%= link_to @book.user.name, user_path(@book.user.id) %>
<%= @book.title %>
<%= @book.body %>
<% if @book.user == current_user %>
<%= link_to "Edit",edit_book_path(@book)%>
<%= link_to "Destroy",book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%>
<% end %>
</div><!--col-xs-9 -->
</div><!--row -->
</div><!--container -->
<footer>
<p>CopyRight Infratop.inc</p>
</footer>


</body>
</html>
