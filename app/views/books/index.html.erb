<h1>Books</h1>
<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><span><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60%><% end %></span></td>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.opinion %></span></td>
        <td><%= link_to "Show",book_path(book.id)%></td>
        <td><%= link_to "Edit",edit_book_path(book.id)%></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
      </tr>
  </tbody>
</table>
<% end %>

