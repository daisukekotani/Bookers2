<% if user_signed_in? %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
  <% end %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <th></p></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :opinion %>
<%= f.submit 'CreateBook' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><span><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60%><% end %></span></td>
        <td><span><%= link_to book.title, book_path(book.id) %></span></td>
        <td><span><%= book.opinion %></span></td>

      </tr>
  </tbody>
</table>
<% end %>

